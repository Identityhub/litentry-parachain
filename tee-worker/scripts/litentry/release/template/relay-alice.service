[Unit]
Description=Litentry Relaychain Alice

[Service]
Type=simple
WorkingDirectory=/opt/litentry/parachain
ExecStart=./polkadot --base-path /opt/litentry/parachain/relay-alice --chain rococo-local-chain-spec.json --alice --port 30336 --ws-port 9946 --rpc-port 9936
Restart=always
RestartSec=120
StandardOutput=file:/opt/parachain/relay.alice.log
StandardError=inherit

[Install]
WantedBy=multi-user.target
