{
    "name": "litentry-integration-test",
    "version": "1.0.0",
    "description": "This is a set of integration tests for litentry runtime, using TypeScript.",
    "main": "index.js",
    "directories": {
        "test": "tests"
    },
    "scripts": {
        "register-parathread": "pnpm exec ts-node tests/register-parathread.ts",
        "upgrade-parathread": "pnpm exec ts-node tests/upgrade-parathread.ts",
        "setup-enclave": "pnpm exec ts-node tests/setup-enclave.ts",
        "test-filter": "pnpm exec mocha --exit --sort -r ts-node/register 'tests/base-filter.test.ts'",
        "test-bridge": "pnpm exec mocha --exit --sort -r ts-node/register 'tests/bridge.test.ts'",
        "test-evm-transfer": "pnpm exec mocha --exit --sort -r ts-node/register 'tests/evm-transfer.test.ts'",
        "test-evm-contract": "pnpm exec mocha --exit --sort -r ts-node/register 'tests/evm-contract.test.ts'",
        "test-runtime-upgrade": "pnpm exec mocha --exit --sort -r ts-node/register 'tests/runtime-upgrade.test.ts'",
        "test-all": "pnpm exec mocha --exit --sort -r ts-node/register 'tests/**/*.test.ts'"
    },
    "author": "Han Zhao",
    "license": "ISC",
    "devDependencies": {
        "@types/chai": "^4.3.1",
        "@types/mocha": "^10.0.1",
        "chai": "^4.3.6",
        "gts": "^3.1.0",
        "mocha": "^10.2.0",
        "mocha-steps": "^1.3.0",
        "prettier": "2.8.3",
        "ts-node": "^10.8.1",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "@polkadot/api": "^10.3.4",
        "@polkadot/types": "^10.3.4",
        "add": "^2.0.6",
        "dotenv": "^16.0.3",
        "ethers": "^5.7.2",
        "solc": "0.8.18",
        "web3": "^1.8.1"
    },
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "packageManager": "pnpm@8.7.6"
}
